<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="rectangle">
            <stroke android:color="#40009200" android:width="0.8dp"/>
            <solid android:color="#33009200"/>
            <size android:width="100dp" android:height="30dp"/>
            <padding android:top="0.5dp" android:right="0.5dp" android:left="0.5dp" android:bottom="0.5dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:gravity="left|top">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <corners android:radius="5dp"/>
            <size android:height="7dp" android:width="7dp"/>
            <solid android:color="@color/colorAccent"/>

        </shape>
    </item>
    <item android:gravity="right|bottom">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <corners android:radius="5dp"/>
            <size android:height="7dp" android:width="7dp"/>
            <solid android:color="@color/colorAccent"/>

        </shape>
    </item>
    <item android:gravity="left|bottom">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval"
            >
            <corners android:radius="5dp"/>
            <size android:height="7dp" android:width="7dp"/>
            <solid android:color="@color/colorAccent"/>

        </shape>
    </item>

</layer-list>